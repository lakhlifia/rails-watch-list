<h1>List Details</h1>

<p><strong>Name:</strong> <%= @list.name %></p>

<h2>Bookmarks</h2>

<table>
  <thead>
    <tr>
      <th>Movie</th>
      <th>Comment</th>
      <th>Action</th> <!-- New column for delete links -->
    </tr>
  </thead>
  <tbody>
    <% @list.bookmarks.each do |bookmark| %>
      <tr>
        <td><%= bookmark.movie.title %></td>
        <td><%= bookmark.comment %></td>
        <td>
         <%= link_to 'Delete', list_bookmark_path(@list, bookmark), method: :delete, data: { confirm: 'Are you sure you want to delete this bookmark?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back to Lists', lists_path, class: 'btn btn-secondary' %>

<%= link_to 'Add Movie', new_list_bookmark_path(@list.id), class: 'btn btn-primary' %>
